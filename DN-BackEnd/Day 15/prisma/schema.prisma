// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  fullname String
  email    String
  password String
  role     String @default("user")
}

model Product {
  id          Int    @id @default(autoincrement())
  title       String
  price       Int
  count       Int
  description String
  image       String
}
